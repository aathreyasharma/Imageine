<%= render 'home/jumbo' %> <%# Add 'unless user_signed_in?' to make jumbotron invi after login%>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
     <div class="box">
      <div class="panel panel-default">
          <%= link_to image_tag(pin.image.url), pin %><br/>
          <div class="panel-body">
            <blockquote><%= pin.description %></blockquote><br/>
            <div class="panel-footer">
              Submitted by:
            <strong><%= pin.user.name if pin.user %></strong><br/>
            </div>
          </div>
        </div>
    </div>
  <% end %>
    
</div>

<div class='center'>
<%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
